# templates/.env.j2

# Auto-accept the EULA
ACCEPT_IGNITION_EULA=Y

# Initial admin user + password
GATEWAY_ADMIN_USERNAME={{ admin_user }}
GATEWAY_ADMIN_PASSWORD={{ admin_pass }}

# Gateway edition (standard / maker / edge)
IGNITION_EDITION={{ edition }}

# Timezone so log timestamps match your locale
TZ={{ timezone }}

{% if gateway_modules_enabled %}
# Limit default modules enabled at launch
GATEWAY_MODULES_ENABLED={{ gateway_modules_enabled }}
{% endif %}
{% if gateway_module_relink %}
# Replace bundled modules with copies from /modules
GATEWAY_MODULE_RELINK=true
{% endif %}
{% if gateway_jdbc_relink %}
# Replace bundled JDBC drivers with copies from /jdbc
GATEWAY_JDBC_RELINK=true
{% endif %}
{% if ignition_uid is not none %}
# Run Ignition under a specific UID
IGNITION_UID={{ ignition_uid }}
{% endif %}
{% if ignition_gid is not none %}
# Run Ignition under a specific GID
IGNITION_GID={{ ignition_gid }}
{% endif %}
{% if activation_token_file %}
# Point to the activation token mounted into the container
IGNITION_ACTIVATION_TOKEN_FILE={{ activation_token_file }}
{% endif %}
{% if license_key_file %}
# Point to the license key file mounted into the container
IGNITION_LICENSE_KEY_FILE={{ license_key_file }}
{% endif %}
